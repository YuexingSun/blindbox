<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <stroke android:color="@color/c_FF4545"
                    android:width="2dp" />
                <gradient
                    android:endColor="@color/c_FF4545"
                    android:startColor="@color/c_FF599E" />
            </shape>
        </clip>
    </item>
</layer-list>
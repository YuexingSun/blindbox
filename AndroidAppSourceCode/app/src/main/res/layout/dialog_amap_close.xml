<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    android:background="@color/transparent">

    <com.noober.background.view.BLTextView
        android:id="@+id/One"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="退出导航并关闭行程"
        android:textColor="@color/c_3"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:bl_corners_topLeftRadius="20dp"
        app:bl_corners_topRightRadius="20dp"
        app:bl_solid_color="@color/c_F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/FenGeB"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/One" />

    <com.noober.background.view.BLTextView
        android:id="@+id/Two"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="退出导航"
        android:textColor="@color/c_3"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:bl_corners_bottomLeftRadius="20dp"
        app:bl_corners_bottomRightRadius="20dp"
        app:bl_solid_color="@color/c_F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FenGeB" />

    <com.noober.background.view.BLTextView
        android:id="@+id/Cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/c_6"
        android:textSize="@dimen/sp_18"
        app:bl_corners_radius="20dp"
        app:bl_solid_color="@color/c_F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Two" />

</androidx.constraintlayout.widget.ConstraintLayout>
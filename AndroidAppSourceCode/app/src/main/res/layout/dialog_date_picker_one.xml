<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_F">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/c_B3"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="出生年月"
        android:textColor="@color/c_BF000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/c_FF4A80"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Title" />

    <View
        android:id="@+id/FenGeA"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/c_EB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title" />

    <com.noober.background.view.BLTextView
        android:layout_width="320dp"
        android:layout_height="52dp"
        app:bl_corners_radius="8dp"
        app:bl_solid_color="@color/c_F1"
        app:layout_constraintBottom_toBottomOf="@+id/UserDatePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/UserDatePicker" />

    <com.loper7.date_time_picker.DateTimePicker
        android:id="@+id/UserDatePicker"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout="@layout/view_date_picker_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FenGeA"
        app:showLabel="false"
        app:textSize="@dimen/sp_18"
        app:themeColor="@color/c_64" />

</androidx.constraintlayout.widget.ConstraintLayout>